

#
# Source this script to set up / reset the Conda psana environment
# Should need to be done only once or when things need a 'hard reset'
#

source /reg/g/psdm/etc/psconda.sh
conda activate ana-1.3.49
condarel --newrel --name ana-1.3.49

cd ana-1.3.49
source conda_setup

cp -r ../../cheetah-dev-cpo/ana-1.3.49/cheetah .
cp -r ../../cheetah-dev-cpo/ana-1.3.49/jungfrau .
cp -r ../../cheetah-dev-cpo/ana-1.3.49/cheetah_psana .




